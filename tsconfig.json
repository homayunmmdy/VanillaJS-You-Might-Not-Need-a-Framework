{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "es6"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
